{
  "name": "react-express-starter",
  "version": "0.1.0",
  "description": "Simple react app served by express",
  "repository": "https://github.com/dan-j/react-express-starter",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf build",
    "build-server": "babel -d ./build server.js -s && babel -d ./build/server server/ -s",
    "build-client": "webpack -p --config webpack.config.js",
    "build": "npm run clean && npm run build-client && npm run build-server",
    "start": "node build/server.js",
    "start:clean": "npm run build && npm run start",
    "dev": "NODE_ENV=development babel-node $NODE_DEBUG_OPTION server.js",
    "test": "jest",
    "lint": "esw --color --ext .js --ext .jsx server client webpack.*.config*",
    "lint:watch": "npm run lint -- --watch"
  },
  "author": "dan-j",
  "license": "MIT",
  "dependencies": {
    "express": "^4.14.0",
    "morgan": "^1.7.0",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2",
    "whatwg-fetch": "^2.0.1",
    "chokidar": "^1.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.8",
    "babel-preset-airbnb": "^2.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "eslint-watch": "^2.1.14",
    "jest": "^17.0.3",
    "react-test-renderer": "^15.4.0"
  }
}
